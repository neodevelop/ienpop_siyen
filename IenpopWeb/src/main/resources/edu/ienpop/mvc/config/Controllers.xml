<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-2.5.xsd">
           
	<bean name="/index.ienpop" class="edu.ienpop.mvc.controller.IndexController">
	</bean>
	<bean name="/sistema.ienpop" class="edu.ienpop.mvc.controller.SistemaController">
		<property name="persistenceService" ref="persistenceService"/>
		<property name="catalogoService" ref="catalogoService"/>
		<property name="ienpopProducer" ref="ienpopProducer"/>
	</bean>
	<bean name="/certificados.ienpop" class="edu.ienpop.mvc.controller.CertificadosController">
		<property name="cursoService" ref="cursoService"/>
		<property name="persistenceService" ref="persistenceService"/>
	</bean>
	<bean name="/reverso.ienpop" class="edu.ienpop.mvc.controller.ReversoController">
		<property name="llaveService" ref="llaveService"/>
		<property name="cursoService" ref="cursoService"/>
	</bean>
	<bean name="/oficio.ienpop" class="edu.ienpop.mvc.controller.OficioController">
		<property name="cursoService" ref="cursoService"/>
		<property name="persistenceService" ref="persistenceService"/>
		<property name="usuarioService" ref="usuarioService"/>
	</bean>
	<bean name="/informePeriodico.ienpop" class="edu.ienpop.mvc.controller.InformePeriodicoController">
		<property name="cursoService" ref="cursoService"/>
		<property name="persistenceService" ref="persistenceService"/>
	</bean>
</beans>