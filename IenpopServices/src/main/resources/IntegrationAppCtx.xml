<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="jmsFactoryDevelopment" class="org.apache.activemq.ActiveMQConnectionFactory">
		<property name="brokerURL" value="tcp://localhost:61616"/>
	</bean>
	
	<bean id="jmsFactoryProduction" class="com.sun.messaging.ConnectionFactory">
	</bean>
	
	<bean id="jmsTemplate" class="org.springframework.jms.core.JmsTemplate">
		<property name="connectionFactory">
			<bean class="org.springframework.jms.connection.SingleConnectionFactory">
				<property name="targetConnectionFactory">
					<!--ref local="jmsFactoryDevelopment"/-->
					<ref local="jmsFactoryProduction"/>
				</property>
			</bean>
		</property>
	</bean>
	
	<bean id="destinationDevelopment" class="org.apache.activemq.command.ActiveMQQueue" autowire="constructor">
		<constructor-arg>
			<value>edu.ienpop.integration.jms.queue</value>
		</constructor-arg>
	</bean>
	
	<bean id="destinationProduction" class="com.sun.messaging.Queue" autowire="constructor">
		<!--constructor-arg>
			<value>edu.ienpop.integration.jms.queue</value>
		</constructor-arg-->
	</bean>
	
	<bean id="messageListener" class="edu.ienpop.integration.jms.impl.IenpopMessageListener">
		<property name="mailService" ref="mailService"/>
		<property name="llaveService" ref="llaveService"/>
		<property name="persistenceService" ref="persistenceService"/>
	</bean>
	
	<bean id="ienpopProducer" class="edu.ienpop.integration.jms.impl.IenpopProducer">
		<!--property name="destination" ref="destinationDevelopment" /-->
		<property name="destination" ref="destinationProduction" />
		<property name="jmsTemplate" ref="jmsTemplate" />
	</bean>
	
	<bean id="listenerContainer" class="org.springframework.jms.listener.DefaultMessageListenerContainer">
		<property name="concurrentConsumers" value="5"/>
		<!--property name="connectionFactory" ref="jmsFactoryDevelopment"/-->
		<property name="connectionFactory" ref="jmsFactoryProduction"/>
		<property name="destination" ref="destinationDevelopment"/>
		<property name="messageListener" ref="messageListener"/>
	</bean>

</beans>
